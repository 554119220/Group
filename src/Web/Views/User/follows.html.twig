{% extends 'Web/Views/layout.html.twig' %}

{% block title %}好友{% endblock %}
{% block parent_stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset("asset/css/details.css") }}" />
<link rel="stylesheet" type="text/css" href="{{ asset("asset/css/list.css") }}" />
<link rel="stylesheet" type="text/css" href="{{ asset("asset/css/WebApp_reset.css") }}" />
<link rel="stylesheet" type="text/css" href="{{ asset("asset/css/public.css") }}" />
<link rel="stylesheet" type="text/css" href="{{ asset("asset/css/header.css") }}" />
{% endblock %}

{% block head_scripts %}
<script>
    seajs.use("/asset/js/home")
    seajs.use("/asset/js/follows")
</script>
{% endblock %}

{% block body %}
<div class="textbox"><span class="glyphicon glyphicon-bullhorn mr5"></span>我的好友</div>
<div class="getfriend mt10">
    <div class="sendifo fl follows">关注</div>
    <div class="addfriend fr follower">粉丝</div>
</div>
<ul class="friend_list">
	{% for follow in follows %}
	<li class="user-link" data-id="{{ follow.user.uid }}">
		{% if follow.user.sex == 'male' %}
	                <img src="{{ asset("asset/img/header.jpg") }}">
	            {% else %}
	                <img src="{{ asset("asset/img/touxiang2.jpg") }}">
	            {% endif %}
		<div>{{ follow.user.username}}</div>
	</li>
	{% endfor %}
	
</ul>

{% include 'Web/Views/public/bottom.html.twig' %} 
{% endblock %}