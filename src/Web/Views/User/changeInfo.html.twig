{% extends 'Web/Views/layout.html.twig' %}

{% block title %}个人中心{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset("asset/css/public.css") }}" />
<link rel="stylesheet" type="text/css" href="{{ asset("asset/css/change.css") }}" />
<link rel="stylesheet" type="text/css" href="{{ asset("asset/css/WebApp_reset.css") }}" />
{% endblock %}

{% block head_scripts %}
<script>
    seajs.use("/asset/js/home")
    seajs.use("/asset/js/change")
</script>
{% endblock %}

{% block body %}
<div class="logo">
	<img src="{{ asset("asset/img/logo.png") }}" >
</div>
<div class="title">修改个人资料</div>
<form class="login_box" id="info-form" data-id="{{user.uid}}">
	<div class="row mr0 ml0 info"  style="display:none;">
	        <div class="alert alert-info fz14" role="alert">
	        </div>
	    </div>
	<div class="input_box" id="name_box">
		<div class="input_name">昵称</div>
		<div class="input">
			<input type="text" class="login_name" placeholder="昵称" value="{{ user.username }}" name="username">
		</div>
	</div>
	<div class="input_box" id="pas_box">
		<div class="input_name">简介</div>
		<div class="input">
			<input type="text" class="login_name" placeholder="介绍一下自己" name="content" value="{{ user.content }}">
		</div>
	</div>
	<div class="input_box" id="pas_box">
		<div class="input_name">个性签名</div>
		<div class="input">
			<input type="text" class="login_name" placeholder="个性签名" name="sign" value="{{ user.sign }}">
		</div>
	</div>
	<div class="header_box">

	         <label for="male"><img src="{{ asset("asset/img/header.jpg") }}"></label>
	         <input type="radio" name="sex" value="male" id="male" {% if user.sex == 'male' %}checked="checked"{% endif%}>
	        
	        <label for="female"><img src="{{ asset("asset/img/touxiang2.jpg") }}"></label>
	        <input type="radio" name="sex" value="female" id="female" {% if user.sex == 'female' %}checked="checked"{% endif%}>
	        <div>你是MM还是GG？选一张迷人帅气的头像吧。</div>
    	</div>
	<div class="login_but">保&nbsp&nbsp&nbsp存</div>
</form>
<div class="alert_box hide">
	<div class="alert"></div>
</div>
{% include 'Web/Views/public/bottom.html.twig' %} 
{% endblock %}