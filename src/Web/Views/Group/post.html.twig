</script>
{% endblock %}

{% block body %}
<div class="title_box">
    <input type="text" placeholder="点击输入标签" name="title"/>
</div>
<div class="info_box">
    <textarea placeholder="点击输入文字内容" name="content"></textarea>
</div>
<div class="pic_box">
    <img src="{{ asset("asset/img/header.jpg") }}" >
</div>
<div class="post_but">发布</div>
<div class="cancel_but">放弃</div>
